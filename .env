# Agentic AI Network Infrastructure Operator
# NetOps Sentinel - Autonomous Network Agent

# ============= LLM Provider Configuration =============
# Primary provider: "ollama" | "openai" | "deepseek"
LLM_PROVIDER=ollama

# Option 1: Ollama (local or remote)
OLLAMA_HOST=https://0802-34-186-8-91.ngrok-free.app
OLLAMA_MODEL=gpt-oss:20b
DEFAULT_MODEL=gpt-oss:20b

# Option 2: OpenAI
# OPENAI_API_KEY=sk-your-openai-api-key
# OPENAI_MODEL=gpt-4o-mini
# OPENAI_BASE_URL=             # Leave empty for default OpenAI endpoint

# Option 3: DeepSeek
# DEEPSEEK_API_KEY=your-deepseek-api-key
# DEEPSEEK_MODEL=deepseek-chat
# DEEPSEEK_BASE_URL=https://api.deepseek.com/v1

# Fallback: auto-switch provider on failure
LLM_FALLBACK_ENABLED=true
LLM_FALLBACK_PROVIDER=ollama   # Provider to use when primary fails

# ============= Server Configuration =============
HOST=0.0.0.0
PORT=8000
DEBUG=true

# ============= NetBox Integration =============
# Optional: If not set, uses local SQLite inventory
# NETBOX_URL=http://netbox.local:8080
# NETBOX_TOKEN=your-netbox-api-token

# ============= Device Credentials =============
# Default credentials (used if no specific credential_id)
DEVICE_USERNAME=admin
DEVICE_PASSWORD=your-device-password
DEVICE_ENABLE=your-enable-secret

# Per-device credentials (optional)
# Format: DEVICE_USERNAME_{CREDENTIAL_ID}=username
# DEVICE_USERNAME_CISCO=cisco_admin
# DEVICE_PASSWORD_CISCO=cisco_pass
# DEVICE_USERNAME_MIKROTIK=mikrotik_admin
# DEVICE_PASSWORD_MIKROTIK=mikrotik_pass

# ============= Security =============
# Max agent iterations per session (prevents loops)
MAX_ITERATIONS=5


